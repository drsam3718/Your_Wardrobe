<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateOutfit">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/outfit_cover"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pick_cover_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pick cover"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/outfit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Outfit Name"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/top_image_view"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_top_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:layout_margin="20dp"
                    android:text="Select\nTop"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/bottom_image_view"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_bottom_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:layout_margin="20dp"
                    android:text="Select\nBottom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/jacket_image_view"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_jacket_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:layout_margin="20dp"
                    android:text="Select\nJacket"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/shoes_image_view"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_shoes_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:layout_margin="20dp"
                    android:text="Select\nShoes"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/accessory_image_view"
                    android:background="@color/dialog_choose_text_color"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/select_accessories_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_weight="2"
                    android:layout_margin="20dp"
                    android:text="Select\nAccessories"/>
            </LinearLayout>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_outfit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="create outfit"/>
</RelativeLayout>